<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android1:layout_width="match_parent"
    android1:layout_height="wrap_content"
    android1:layout_margin="15dp">

    <TextView
        android1:id="@+id/dateInfo"
        android1:layout_width="0dp"
        android1:layout_height="wrap_content"
        android1:layout_gravity="center_vertical"
        android1:layout_weight="4"/>

    <ImageView
        android1:id="@+id/skyIcon"
        android1:layout_width="20dp"
        android1:layout_height="20dp"/>

    <TextView
        android1:id="@+id/skyInfo"
        android1:layout_width="0dp"
        android1:layout_height="wrap_content"
        android1:layout_gravity="center_vertical"
        android1:layout_weight="3"
        android1:gravity="center"/>

    <TextView
        android1:id="@+id/temperatureInfo"
        android1:layout_width="0dp"
        android1:layout_height="wrap_content"
        android1:layout_gravity="center_vertical"
        android1:layout_weight="3"
        android1:gravity="end"/>

</LinearLayout>